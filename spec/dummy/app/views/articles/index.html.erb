<% @articles.each do |article| %>
  <div class="page-header">
    <h1><%= link_to article.title, article %></h1>
  </div>

  <div class="clearfix">
    <%= raw article.intro %>
  </div>

  <div class="clearfix">
    <%= raw article.content %>
  </div>
  <hr />
<% end %>

<%= link_to 'New Article', new_article_path, class: 'btn' %>
